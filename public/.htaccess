<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redireciona os pedidos que n찾o correspondem a arquivos ou diret처rios existentes para o front controller
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    # Remove a barra no final da URL se n찾o for um diret처rio
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]
</IfModule>
